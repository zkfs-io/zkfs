{
  "compilerOptions": {
    "strictNullChecks": true,
    "lib": [
      "es2020"
    ],
    "target": "ES2020",
    "module": "ES2022",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}