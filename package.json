{
  "name": "zkfs",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npx lerna run dev",
    "build": "npx lerna run build",
    "lint": "npx lerna run lint",
    "lint:staged": "eslint",
    "test": "npx lerna run test -- --passWithNoTests",
    "test:ci": "npx lerna run test -- --passWithNoTests --forceExit",
    "test:watch": "npx lerna run test:watch",
    "commit": "cz",
    "publish:canary": "npx lerna publish --no-private --create-release=github --yes --canary --preid alpha --dist-tag latest --pre-dist-tag latest --loglevel verbose"
  },
  "private": true,
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.32.0",
    "eslint-config-hardcore": "^26.0.1",
    "husky": "^8.0.3",
    "jest": "^29.4.0",
    "lerna": "^6.4.1",
    "lint-staged": "^13.1.0",
    "nx": "15.6.2",
    "prettier": "^2.6.2",
    "snarkyjs": "^0.8.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:staged"
    ]
  },
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "lodash": "^4.17.21"
  },
  "stackblitz": {
    "startCommand": "cd packages/examples && npm i @zkfs/contract-api@latest && cd ../.. && npx lerna run test:watch --scope=@zkfs/examples"
  }
}
